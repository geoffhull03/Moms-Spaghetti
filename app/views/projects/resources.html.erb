<h3> Active Projects found for Company (ID <%= @company_id %>):</h3>

<table class="active-projects">
		<thead>
			<tr>
				<th>ID</th>
				<th>Name</th>
			</tr>
		</thead>
		<tbody>
		<% @projects.each do |project| %>
			<tr>
				<td><%= project['id'] %></td>
        <td><%= project['name'] %></td>
			</tr>
		<% end %>
		</tbody>
	</table><br>

<h3> Select Resources to View (ID <%= @company_id %>):</h3>
  <table class="monitored-checkbox">
  		<thead>
  			<tr>
  				<th>Name</th>
					<th> Select to view Monitored Resources Forecast </th>
  			</tr>
  		</thead>
  		<tbody>
  		<% @monitoring_resources.each do |resource| %>
  			<tr>
          <td><%= resource['description'] %></td>
					<td>
						<label>
  						<input type="checkbox">
  						<span class="checkmark"></span>
						</label>
					</td>
				</tr>
  		  <% end %>
  		</tbody>
  	</table><br>

		<form action="/projects/forecast" method = "get">
			<input type="text" name="company_id">
			<input type="submit" value="Submit">
		</form>
